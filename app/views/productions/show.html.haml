
.container
  .row
    .col-12
      %hr
      %h1.ruslan.text-center #{@production.title} (#{@production.year})
      %hr

.container-fluid
  .row
    .col-12.col-sm-6.text-center.mb-2
      - if @production.start_date && @production.end_date
        = render partial: 'purchase_details', locals: { production: @production }
      = render partial: 'cast_list', locals: { production: @production }
      - unless @production.has_all_data?
        %p
          This cast list may be incomplete...
          %em For Now!
      - if @production.venue
        %strong= @production.venue.name
    .col-10.offset-1.col-sm-4.offset-sm-1.mb-2
      = image_tag @production.poster, class: 'img-fluid', alt: "#{@production.title} Poster"

- if @photos.any?
  = render partial: 'shared/photo_block', locals: { photos: @photos }
