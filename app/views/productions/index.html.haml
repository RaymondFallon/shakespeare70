%h1.m-4.text-center.ruslan A Recent History

.container
  - @productions.keys.each_with_index do |year, idx|
    - unless idx.zero?
      %hr
    .row
      .col-12.col-md-3.text-center.align-self-center.permanent-marker
        %h2.inline-block= year
      - @productions[year].each do |production|
        .col-12.col-md-3.text-center.permanent-marker
          .container
            .row
              .col-12
                = link_to production do
                  =image_tag production.poster, class: 'img-fluid rounded-1r',
                                                style: 'max-width: 80px',
                                                alt: "#{production.title} Poster"
              .col-12
                = link_to production.title, production, class: 'no-decoration black'