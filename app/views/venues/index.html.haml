%h1 Listing venues

%table
  %thead
    %tr
      %th Name
      %th Address
      %th Zipcode
      %th Description
      %th
      %th
      %th

  %tbody
    - @venues.each do |venue|
      %tr
        %td= venue.name
        %td= venue.address
        %td= venue.zipcode
        %td= venue.description
        %td= link_to 'Show', venue
        %td= link_to 'Edit', edit_venue_path(venue)
        %td= link_to 'Destroy', venue, method: :delete, data: { confirm: 'Are you sure?' }

