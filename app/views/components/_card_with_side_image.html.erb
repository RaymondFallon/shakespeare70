<% image_path ||= 'production_posters/get_a_poster.jpg' %>
<% body ||= '' %>
<% img_right ||= false %>
<% img_link ||= false %>
<% # TODO: Add alt text %>

<div class="container img-card mt-4 mb-4">
  <div class="row img-card-row <%= 'img-card-right-row' if img_right %>">
    <div class="col-8 col-md-3 img-of-img-card">
      <% if img_link %>
        <%= link_to(image_tag(image_path, class: 'img-fluid rounded-1r mt-2 mb-2'), img_link, target: '_blank') %>
      <% else %>
        <%= image_tag(image_path, class: 'img-fluid rounded-1r mt-2 mb-2') %>
      <% end %>
    </div>
    <div class="col-12 col-md-7 body-of-img-card <%= img_right ?  'text-left' : 'text-right' %>">
      <%= body %>
    </div>
  </div>
</div>