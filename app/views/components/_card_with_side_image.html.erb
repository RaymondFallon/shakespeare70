<% image_path ||= 'production_posters/get_a_poster.jpg' %>
<% body ||= '' %>
<% img_right ||= false %>
<% img_link ||= false %>
<% img_class = class_for_img(image_path) %>
<% # TODO: Add alt text %>

<div class="container img-card mt-4 mb-4">
  <div class="row img-card-row <%= 'img-card-right-row' if img_right %>">
    <div class="col-8 col-md-4 img-of-img-card">
      <% if img_link %>
        <% # TODO: Add noopener to all target: _blank links!! %>
        <%= link_to(image_tag(image_path, class: img_class), img_link, target: '_blank') %>
      <% else %>
        <%= image_tag(image_path, class: img_class) %>
      <% end %>
    </div>
    <div class="col-12 col-md-6 body-of-img-card <%= img_right ?  'text-left' : 'text-right' %>">
      <%= body %>
    </div>
  </div>
</div>